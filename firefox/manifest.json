{
  "manifest_version": 2,
  "name": "ADO Tab Icons",
  "version": "1.5.1",
  "description": "Changes Azure DevOps tab icons based on page type: Bug, Pull Request, Pipeline, Feature, Epic, Readiness, User Story, and more",
  "permissions": [
    "tabs",
    "activeTab",
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*",
    "https://dev.azure.com.mcas.ms/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/bug.png",
    "32": "icons/bug.png",
    "48": "icons/bug.png",
    "128": "icons/bug.png"
  },
  "browser_action": {
    "default_icon": {
        "16": "icons/bug.png",
        "32": "icons/bug.png",
        "48": "icons/bug.png",
        "128": "icons/bug.png"
    },
    "default_title": "ADO Tab Icons"
  },
  "web_accessible_resources": [
    "icons/*.png"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ado-tab-icon-extension@gmail.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}

