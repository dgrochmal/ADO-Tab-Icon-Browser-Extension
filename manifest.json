{
  "manifest_version": 3,
  "name": "ADO Tab Icons",
  "version": "1.5.2",
  "description": "Changes Azure DevOps tab icons based on page type: Bug, Pull Request, Pipeline, Feature, Epic, Readiness, User Story, and more",
  "icons": {
    "16": "icons/bug.png",
    "32": "icons/bug.png",
    "48": "icons/bug.png",
    "128": "icons/bug.png"
  },
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://dev.azure.com/*", "https://*.visualstudio.com/*", "https://dev.azure.com.mcas.ms/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/bug.png", "icons/pr.png", "icons/story.png", "icons/release.png", "icons/feature.png", "icons/epic.png", "icons/readiness.png", "icons/mag.png", "icons/board.png", "icons/wiki.png", "icons/code.png", "icons/independent-variable.png", "icons/ado.png", "icons/dashboard.png", "icons/vase.png", "icons/query.png", "icons/settings.png", "icons/gavel.png"],
      "matches": ["https://dev.azure.com/*", "https://*.visualstudio.com/*", "https://dev.azure.com.mcas.ms/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ado-tab-icon-extension@gmail.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}

